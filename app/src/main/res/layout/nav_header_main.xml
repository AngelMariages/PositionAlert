<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/nav_header_padding"
    android:paddingLeft="@dimen/nav_header_padding"
    android:paddingStart="@dimen/nav_header_padding"
    android:paddingRight="@dimen/nav_header_padding"
    android:paddingEnd="@dimen/nav_header_padding"
    android:paddingTop="@dimen/nav_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        tools:src="@android:drawable/sym_def_app_icon"
        android:id="@+id/userImageView"
        android:layout_width="68dp"
        android:layout_height="68dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/userNameText"
                tools:text="Android Studio"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:maxLines="1" />

            <TextView android:layout_width="wrap_content"
                tools:text="android.studio@android.com"
                android:text="" android:id="@+id/userEmailText"
                android:maxLines="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            app:srcCompat="@drawable/ic_action_logout"
            android:id="@+id/buttonLogout"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null" />

    </LinearLayout>

</LinearLayout>
